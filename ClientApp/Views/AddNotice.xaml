<UserControl x:Class="ClientApp.Views.AddNotice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Lisa teade:" HorizontalAlignment="Center" FontSize="18"/>
            <TextBlock Text="Teate tekst:"/>
            <TextBox x:Name="AddNoticeText" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
            <TextBlock Text="Kuvatakse alates kuupäevast:"/>
            <DatePicker x:Name="DatePickerNoticeFromDate" Width="120" HorizontalAlignment="Left"/>
            <TextBlock Text="Kuni kuupäevani:"/>
            <DatePicker x:Name="DatePickerNoticeToDate" Width="120" HorizontalAlignment="Left"/>
            <Button x:Name="ButtonAddNotice" Content="Lisa teade" Width="100" HorizontalAlignment="Left" Click="ButtonAddNotice_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
