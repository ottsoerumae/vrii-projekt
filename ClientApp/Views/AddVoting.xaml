<UserControl x:Class="ClientApp.Views.AddVoting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel RenderTransformOrigin="0.503,0.52">
            <TextBlock Text="Lisa hääletus:" HorizontalAlignment="Center" FontSize="18"/>
            <TextBlock Text="Ettepanek:"/>
            <TextBox x:Name="TextBoxVotingSuggestion" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="Vastusevariandid eraldatuna komadega:"/>
            <TextBox x:Name="TextBoxPossibleVotes" Width="300" HorizontalAlignment="Left"/>
            <TextBlock Text="Valige hääletuse alguskuupäev:"/>
            <DatePicker x:Name="DatePickerVotingFromDate" Width="120" HorizontalAlignment="Left"/>
            <TextBlock Text="Valige hääletuse lõpu kuupäev:"/>
            <DatePicker x:Name="DatePickerVotingToDate" Width="120" HorizontalAlignment="Left"/>
            <Button x:Name="ButtonAddNewVoting" Content="Lisa hääletus" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
